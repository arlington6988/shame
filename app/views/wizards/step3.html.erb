<ol class="breadcrumb">
  <li class='active'>Step 3</li>
</ol>

<%= simple_form_for @review_wizard, as: :review_wizard, url: validate_step_wizard_path do |f| %>
  <%= f.error_notification %>
  <%= f.input :rating %>
  <%= hidden_field_tag :current_step, 'step3' %>
  <%= f.submit 'Continue' %>
<% end %>